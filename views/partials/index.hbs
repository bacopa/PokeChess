<div class="row">
    <div class="col-md-9 col-md-offset-3">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-edit"></i> Create a new game</h3>
            </div>
            <form id="newGameForm" action="/play" method="post">
                <div class="panel-body">
                        <div class="form-group">
                            <label >Choose your opponent</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="opponent" value="friend" checked>
                                    <i class="fa fa-group"></i> Play with a friend
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="opponent" value="machine" disabled>
                                    <i class="fa fa-laptop"></i> Play with the machine
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label >Choose your side</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="side" value="white" checked>
                                    <i class="fa fa-circle-o"></i> White
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="side" value="black">
                                    <i class="fa fa-circle"></i> Black
                                </label>
                            </div>
                        </div>
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-default center-block">Play</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-6 trg">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Top rated live game on Chess Hub</h3>
            </div>
            <div class="panel-body">
                <div id="trg"></div>
                <div class="caption">
                    <h5 class="text-center"><i class="fa fa-circle-o"></i> G. Kasparov <em>vs</em> <i class="fa fa-circle"></i> V. Anand</h5>
                    <h5 class="text-center">
                        <a href="/tv"><i class="fa fa-eye"></i> View game on Chess Hub Tv</a>
                    </h5>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 pod">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Puzzle of the day</h3>
            </div>
            <div class="panel-body">
                <div id="pod" data-fen="{{ puzzle.content }}"></div>
                <div class="caption">
                    <h5 class="text-center">{{ puzzle.comment }}</h5>
                    <h5 class="text-center">
                        <a id="podSolution" href="javascript:void(0)" data-toggle="popover"
                           data-placement="bottom" data-content="{{ puzzle.solution }}"><i class="fa fa-question-circle"></i> Show solution</a>
                    </h5>
                </div>
            </div>
        </div>
    </div>

    <div id="logoutSuccess" hidden="hidden">{{ logoutSuccessMessage }}</div>
    <div id="registerSuccess" hidden="hidden">{{ registerSuccessMessage }}</div>
    <div id="welcomeMessage" hidden="hidden">{{ welcomeMessage }}</div>

</div>
